#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "portuguese");

	// Crie um programa em C que peça ao usuário que insira dois números inteiros
	// e imprima a soma, a diferença, o produto e o quociente.

	int x, y;
	// Solicita ao usuário que digite um caractere
	printf("Digite o primeiro número: ");
	// Lê o caractere digitado pelo usuário e o armazena na variável 'c'
	scanf_s("%d", &x);
	// Solicita ao usuário que digite um caractere
	printf("Digite o segundo número: ");
	// Lê o caractere digitado pelo usuário e o armazena na variável 'c'
	scanf_s("%d", &y);
	
	
	// Exibe o caractere e o seu código ASCII correspondente 
	printf("A soma de %i e %i é %i.\n",x,y,x+y);
	printf("A subtração de %i e %i é %i.\n",x,y,x-y);
	printf("O produto de %i e %i é %i.\n",x,y,x*y);
	printf("O quociente de %i e %i é %i.\n",x,y,x/y);

	return 0;
}
