#include <stdio.h>
#include <locale.h>


int main(){
	char livro[30];
	printf("\nInforme o nome do livro: ");
	// fgets recebe string e tem limitador de tamanho.
	fgets (livro, 30, stdin);
	//stdin para limpar buffer do teclado em C
	printf("\nO nome do livro Ã© %s ",livro);
	printf("\n\n");

	return 0;
}
