#include <stdio.h>
#include <locale.h>

int main()
{
	setlocale(LC_ALL, "portuguese");

	//  Desenvolva um algoritmo que solicite ao usuário dois numeros inteiros. Imprima a 
	//  soma destes numeros na tela.

	int x, y, res;
	printf("Digite um valor:\n");
	scanf_s("%i", &x); 
	
	printf("Digite outro valor:\n");
	scanf_s("%i", &y);

	res = x + y;
	printf("O resultado da soma de %i com %i é %i.\n", x, y, res);

	// %i é o tipo do dado (%i-inteiro decimal, %c-caractere simples)
	//valor é o nome da variável
	//& indica o endereço da variável

	return 0;
}
